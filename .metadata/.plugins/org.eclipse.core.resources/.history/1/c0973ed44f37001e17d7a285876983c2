package array_test;

import java.util.Arrays;

//2차 배열을 1차 배열로 합산
public class array7 {

	public static void main(String[] args) {
		new array7().test();
	}
	public void test() {
		int a[][] ={
				{1,3,5,7},
				{2,4,6,8}
		};
		int ea1 = a.length; //2
		int ea2 = a[0].length; //4
		int make = ea1 * ea2;  //해당배열의 전체 갯수 파악
		int b[] = new int [make]; //2차배열을 1차배열로 병합하기 위한 빈배열 값
		int f,ff=0; 
		int array=0;
		/*
		 * for문
		 for(f=0;f<ea1;f++) { for(ff=0;ff<ea2;ff++) { //System.out.println(a[f][ff]);
		 b[array] = a[f][ff]; array++; } }
		 */
		//foreach 사용 
		 for(int c[] : a) { 
			 for(int cc : c) {
				 b[array] = cc;
				 array++;
				 } 
		 }
		System.out.println(Arrays.toString(b));
	}

}
