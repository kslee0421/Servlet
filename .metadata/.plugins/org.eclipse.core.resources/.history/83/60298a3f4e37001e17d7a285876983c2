package array_test;

import java.util.Arrays;

//2차 배열을 1차 배열로 합산
public class array7 {

	public static void main(String[] args) {
		new array7().test();
	}
	public void test() {
		int a[][] ={
				{1,3,5,7},
				{2,4,6,8}
		};
		int ea1 = a.length;
		int ea2 = a[0].length;
		int make = ea1 * ea2;
		int b[] = new int [make];
		int f,ff=0; 
		int array=0;
		for(f=0;f<ea1;f++) { 
			for(ff=0;ff<ea2;ff++) {
				//System.out.println(a[f][ff]);
				b[array] = a[array][ff];
			}
		}
		System.out.println(Arrays.toString(b));
	}

}
